<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo2"
    tools:context=".MainActivity">


    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:src="@drawable/logo2x"
        android:layout_gravity="center"
        />

    <EditText
        android:id="@+id/ID"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="ID"
        android:background="#ffff"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="30dp"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/nombre"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="40dp"
        android:background="#ffff"
        android:ems="10"
        android:hint="Nombre"
        android:layout_marginBottom="10dp"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/ingredientes"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:ems="10"
        android:layout_gravity="center"
        android:background="#ffff"
        android:hint="Ingredientes"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/preparacion"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:background="#ffff"
        android:hint="Preparacion"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/observaciones"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:background="#ffff"
        android:hint="Observaciones"
        android:inputType="textPersonName" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textStyle="bold"
            android:id="@+id/insertar"
            android:background="@drawable/insertarimagen"
            android:layout_marginLeft="5dp"
            />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/consultarimagen"
            android:layout_marginLeft="10dp"
            android:id="@+id/consultar"
            />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/borrarimagen"
            android:layout_marginLeft="10dp"
            android:id="@+id/eliminar"
            />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/actualizarimagen"
            android:layout_marginLeft="10dp"
            android:id="@+id/actualizar"
            />

    </LinearLayout>


</LinearLayout>